# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status && dunstify -h int:value:"$(pactl get-sink-volume @DEFAULT_SINK@ --format=json| sed -n 's/.*\([0-9][0-9]\)%.*/\1/p')" "Volume"
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status && dunstify -h int:value:"$(pactl get-sink-volume @DEFAULT_SINK@ --format=json| sed -n 's/.*\([0-9][0-9]\)%.*/\1/p')" "Volume"
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3statu && dunstify "$(pactl get-sink-mute @DEFAULT_SINK@)"
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
#bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym $mod+p exec --no-startup-id playerctl play-pause
bindsym $mod+n exec --no-startup-id playerctl next
bindsym $mod+c exec --no-startup-id playerctl previous

